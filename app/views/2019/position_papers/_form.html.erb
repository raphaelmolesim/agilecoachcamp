<%= form_with(model: position_paper, local: true, class: "position-paper-form") do |form| %>
  <% if position_paper.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(position_paper.errors.count, "error") %> prohibited this position_paper from being saved:</h2>

      <ul>
      <% position_paper.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :position_paper_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :year %>
    <%= form.text_field :year, id: :position_paper_year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :question_1 %>
    <%= form.text_area :question_1, id: :position_paper_question_1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :question_2 %>
    <%= form.text_area :question_2, id: :position_paper_question_2, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :question_3 %>
    <%= form.text_area :question_3, id: :position_paper_question_3, class: "form-control" %>
  </div>

  <div class="actions right">
    <%= form.submit "Salvar", class: "button btn btn-primary" %>
    <% if action_name == :edit %>
    <%= link_to 'Visualizar', @position_paper, class: "btn btn-secondary" %> 
    <%= link_to 'Voltar', position_papers_path, class: "btn btn-info" %>
    <% end %>
  </div>
  
  
<% end %>
